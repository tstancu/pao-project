<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="pao.view.DoctorFormController">
    <Label text="Doctor Form" />

    <HBox>
        <Label text="ID:" />
        <TextField fx:id="idField" />
    </HBox>

    <HBox>
        <Label text="Name:" />
        <TextField fx:id="nameField" />
    </HBox>

    <HBox>
        <Label text="Specialty:" />
        <ComboBox fx:id="specialtyComboBox" promptText="Select Specialty" />
    </HBox>

    <HBox spacing="10">
        <Button text="Save" fx:id="saveButton" />
        <Button text="Cancel" fx:id="cancelButton" />
    </HBox>
</VBox>

